# ================================================================
# HR SERVICE CONFIGURATION
# ================================================================
# Service-specific configuration for the HR domain service.
# Copy to .env.hr and update with actual values.
# Inherits from .env.shared for common infrastructure settings.
# ================================================================

# ----------------------------------------------------------------
# Service Configuration
# ----------------------------------------------------------------
SERVICE_NAME=hr-service
SERVER_PORT=8082

# ----------------------------------------------------------------
# Database Schema
# ----------------------------------------------------------------
SPRING_DATASOURCE_SCHEMA=hr_service

# ----------------------------------------------------------------
# Database Migrations
# ----------------------------------------------------------------
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
FLYWAY_LOCATIONS=classpath:db/migration

# ----------------------------------------------------------------
# HR Domain Configuration
# ----------------------------------------------------------------
# Leave balance settings
LEAVE_ANNUAL_DEFAULT_DAYS=20
LEAVE_SICK_DEFAULT_DAYS=10
LEAVE_CARRY_FORWARD_MAX_DAYS=5

# Probation period (in days)
EMPLOYEE_PROBATION_PERIOD_DAYS=90

# Performance review cycle (in months)
PERFORMANCE_REVIEW_CYCLE_MONTHS=6

# ----------------------------------------------------------------
# Service Integration
# ----------------------------------------------------------------
# Flowable engine URL
FLOWABLE_ENGINE_URL=http://localhost:8081

# Admin service URL
ADMIN_SERVICE_URL=http://localhost:8083

# ----------------------------------------------------------------
# Workflow Process Keys
# ----------------------------------------------------------------
# BPMN process definition keys
PROCESS_EMPLOYEE_ONBOARDING=employee-onboarding-process
PROCESS_LEAVE_APPROVAL=leave-approval-process
PROCESS_PERFORMANCE_REVIEW=performance-review-process

# ----------------------------------------------------------------
# Notifications
# ----------------------------------------------------------------
# Enable email notifications
HR_NOTIFICATIONS_EMAIL_ENABLED=true

# Notification templates
HR_NOTIFICATION_TEMPLATE_LEAVE_APPROVED=leave-approved
HR_NOTIFICATION_TEMPLATE_LEAVE_REJECTED=leave-rejected
HR_NOTIFICATION_TEMPLATE_ONBOARDING_WELCOME=onboarding-welcome

# ----------------------------------------------------------------
# File Upload
# ----------------------------------------------------------------
# Document storage path
HR_DOCUMENT_STORAGE_PATH=./hr-documents

# Max file size for employee documents (in MB)
HR_DOCUMENT_MAX_FILE_SIZE=10

# Allowed file types
HR_DOCUMENT_ALLOWED_TYPES=pdf,doc,docx,jpg,jpeg,png

# ----------------------------------------------------------------
# Monitoring
# ----------------------------------------------------------------
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# ----------------------------------------------------------------
# API Documentation
# ----------------------------------------------------------------
SPRINGDOC_API_DOCS_ENABLED=true
SPRINGDOC_SWAGGER_UI_ENABLED=true
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
