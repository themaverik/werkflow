# ================================================================
# WERKFLOW SHARED ENVIRONMENT CONFIGURATION
# ================================================================
# This file contains infrastructure configuration shared across all services.
# Copy to .env.shared and update with actual values for your environment.
# ================================================================

# ----------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=werkflow_admin
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=werkflow

# Connection pool settings
POSTGRES_MAX_POOL_SIZE=10
POSTGRES_MIN_IDLE=2
POSTGRES_CONNECTION_TIMEOUT=30000

# ----------------------------------------------------------------
# Keycloak Authentication
# ----------------------------------------------------------------
KEYCLOAK_URL=http://localhost:8090
KEYCLOAK_REALM=werkflow
KEYCLOAK_CLIENT_ID=werkflow-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# ----------------------------------------------------------------
# Security & JWT
# ----------------------------------------------------------------
JWT_SECRET=your-256-bit-secret-key-change-me-in-production
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-me
ENCRYPTION_ALGORITHM=AES

# ----------------------------------------------------------------
# Messaging (Future - Phase 3)
# ----------------------------------------------------------------
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_GROUP_ID=werkflow
# KAFKA_AUTO_OFFSET_RESET=earliest

# ----------------------------------------------------------------
# Caching (Future - Phase 3)
# ----------------------------------------------------------------
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0

# ----------------------------------------------------------------
# Email Configuration
# ----------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@werkflow.com
SMTP_PASSWORD=smtp_password_change_me
SMTP_FROM=noreply@werkflow.com
SMTP_FROM_NAME=Werkflow Platform

# ----------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------
APP_NAME=Werkflow Enterprise Platform
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# ----------------------------------------------------------------
# Logging
# ----------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# ----------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:4001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
