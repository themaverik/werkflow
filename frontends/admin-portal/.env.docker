# ================================================================
# ADMIN PORTAL - DOCKER ENVIRONMENT CONFIGURATION
# ================================================================

# ----------------------------------------------------------------
# Service Configuration
# ----------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=Werkflow Admin Portal
NEXT_PUBLIC_APP_VERSION=1.0.0

# Port for this frontend (Admin Portal)
PORT=4000

# ----------------------------------------------------------------
# Backend API URLs (Docker Environment)
# ----------------------------------------------------------------
# For Docker environments, use host.docker.internal to access services on host
# OR use the internal service names if all services are in the same Docker network

# Option 1: Access services on host machine (recommended for development)
NEXT_PUBLIC_ENGINE_API_URL=http://host.docker.internal:8081

# Option 2: Access services in same Docker network (uncomment to use)
# NEXT_PUBLIC_ENGINE_API_URL=http://engine-service:8081

# HR Service
NEXT_PUBLIC_HR_API_URL=http://host.docker.internal:8082/api

# Admin Service
NEXT_PUBLIC_ADMIN_API_URL=http://host.docker.internal:8083/api

# ----------------------------------------------------------------
# NextAuth Configuration
# ----------------------------------------------------------------
NEXTAUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# ----------------------------------------------------------------
# Keycloak Configuration (Docker)
# ----------------------------------------------------------------
KEYCLOAK_CLIENT_ID=werkflow-admin-portal
KEYCLOAK_CLIENT_SECRET=your-client-secret-from-keycloak

# For Docker: use internal service name for server-side calls
KEYCLOAK_ISSUER_INTERNAL=http://keycloak:8080/realms/werkflow

# For browser: use localhost (accessible from user's browser)
KEYCLOAK_ISSUER_PUBLIC=http://localhost:8090/realms/werkflow
KEYCLOAK_ISSUER_BROWSER=http://localhost:8090/realms/werkflow

# ----------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------
NEXT_PUBLIC_ENABLE_BPMN_DESIGNER=true
NEXT_PUBLIC_ENABLE_FORM_BUILDER=true
NEXT_PUBLIC_ENABLE_PROCESS_MONITORING=true
